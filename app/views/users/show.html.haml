= provide(:title, @user.name)
= provide(:user, @user.name)
%div
  = image_tag @user.avatar.thumb.url if @user.avatar?
%div
  = link_to "削除", method: :delete_img,
    data: { confirm: "削除します。よろしいですか?" }
%div
  %p
    = @user.name
%div
  %p
    = @user.email
%div.col-md-8
  -if @user.posts.any?
    %p
      = @user.posts.count
      %ol.posts
        = render @posts
      = paginate @posts
  
       